<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#1A1414"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:gravity="center"

    android:background="#333"
    android:layout_centerHorizontal="true"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/image_id"
        android:background="@drawable/c"
        android:layout_height="200dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_below="@+id/image_id"
        android:text="Enter the Amount you want to  change"
        android:textColor="#fff"
        android:gravity="center"
        android:textSize="20sp"
        android:id="@+id/Text_id"
        android:textStyle="bold"
        android:layout_height="30sp" />
    <EditText
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Text_id"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:inputType="number"
        android:gravity="center"
        android:textStyle="bold"
        android:id="@+id/amount"
        android:textSize="20sp"
        android:textColor="#000"
        android:hint="Enter Amount in $"
        android:layout_height="40dp" />
    <Button
        android:layout_width="200dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/amount"
        android:layout_marginTop="10dp"
        android:text="Change Amount"
        android:textColor="#070606"
        android:textSize="20sp"
        android:textStyle="bold"
        android:onClick="amount"
        android:background="#FF9800"
        android:layout_height="40dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_below="@+id/amount"
        android:id="@+id/showresult"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#673AB7"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_height="40dp" />

</RelativeLayout>
</RelativeLayout>